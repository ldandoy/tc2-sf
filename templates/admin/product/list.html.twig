{% extends 'admin/base.html.twig' %}

{% block title %}Test !{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Liste des produits</h1>
        <div>
            <a href="{{ path('admin_products_new') }}" class="btn btn-sm btn-success"><i class="far fa-plus"></i> Ajouter un produit</a>
        </div>
    </div>
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Image</th>
                <th>Nom</th>
                <th>Prix</th>
                <th>Cat√©gorie</th>
                <th width="15%">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for product in products %}
                <tr>
                    <td>
                        <img 
                            src="{{ vich_uploader_asset(product) }}"
                            alt="{{ product.name }}"
                            width="30"
                        />
                    </td>
                    <td>
                        {{ product.name }}
                    </td>
                    <td>
                        {{ product.price }}&euro;
                    </td>
                    <td>
                        {{ product.categoryProduct.name }}
                    </td>
                    <td>
                        <a href="{{ path('admin_products_show', { productId: product.id }) }}" class="btn btn-sm btn-dark">
                            <i class="far fa-eye"></i>
                        </a>
                        <a href="{{ path('admin_products_edit', { productId: product.id }) }}" class="btn btn-sm btn-primary">
                            <i class="fas fa-pencil-alt"></i>
                        </a>
                        <a href="{{ path('admin_products_delete', { productId: product.id }) }}" class="btn btn-sm btn-danger">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}