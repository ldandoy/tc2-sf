{% extends 'base.html.twig' %}

{% block title %}Nos produits{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col">
                <div class="title">
                    <h1>Mes commandes</h1>
                </div>
            </div>
        </div>

        <div class="row">
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Total</th>
                        <th>Status</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    {% for order in pagination %}    
                        <tr>
                            <td>{{ order.id }}</td>
                            <td>{{ order.status }}</td>
                            <td>{{ (order.amountTotal/100) |number_format(2)|format_currency('EUR') }}</td>
                            <td>{{ order.createdAt|date('d/m/Y') }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="row">
            <div class="navigation pt-3">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    </div>
{% endblock %}